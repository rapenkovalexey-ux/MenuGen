# Telegram Bot Token (получить у @BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# Groq API Key (получить на console.groq.com)
GROQ_API_KEY=your_groq_api_key_here

# Payment Token (получить у @BotFather -> Payments, или оставить пустым)
PAYMENT_TOKEN=

# Database (для Railway используется PostgreSQL)
# Локально - SQLite (оставьте пустым)
# На Railway - будет подставлен автоматически если добавить PostgreSQL
DATABASE_URL=sqlite+aiosqlite:///./menu_bot.db

# Email (для поддержки)
SMTP_HOST=smtp.mail.ru
SMTP_PORT=587
SMTP_USER=your_email@mail.ru
SMTP_PASSWORD=your_email_password
